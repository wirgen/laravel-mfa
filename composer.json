{
    "name": "wirgen/laravel-mfa",
    "description": "Provides a multi-factor authentication mechanism for Laravel",
    "type": "library",
    "keywords": [
        "laravel",
        "2fa",
        "mfa",
        "otp",
        "totp"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Denis Nikiforov",
            "email": "my.wirgen@gmail.com",
            "homepage": "https://wirgen.by"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.3|^8.0",
        "illuminate/config": "^8.0",
        "illuminate/database": "^8.0",
        "illuminate/support": "^8.0",
        "spomky-labs/otphp": "^10.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.6",
        "phpstan/phpstan": "^0.12.98",
        "vimeo/psalm": "^4.10",
        "orchestra/testbench": "^6.21",
        "nunomaduro/larastan": "^0.7.12"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Wirgen\\LaravelMfa\\ServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Wirgen\\LaravelMfa\\": "src/"
        }
    }
}
